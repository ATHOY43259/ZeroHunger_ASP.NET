@{
    ViewBag.Title = "PendingRequest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>PendingRequest</h2>

@if (TempData["Msg"] != null)
{
    <h5 class="alert alert-danger">@TempData["Msg"]</h5>
}

<table class="table">
    <tr>
        <th>Restaurant Name</th>
        <th>Creation Time</th>
        <th>Employee id</th>
        <th>Action</th>
    </tr>
    @foreach (var data in Model)
    {
        <form action="" method="post">
        <tr>
            <td>@data.restaurant_name</td>
            <td>@data.created_time</td>
            <td>
                <input type="text" name="id" value=@data.id hidden />
                <input type="text" name="restaurant_name" value=@data.restaurant_name hidden />
                <input type="datetime" name="created_time" value=@data.created_time hidden />
                <input type="datetime" name="accept_time" value=@DateTime.Now.ToShortTimeString(); hidden />
                <input type="datetime" name="done_time" value=@data.done_time hidden />
                <input type="number" name="employee_id" />
                <input type="text" name="status" value="Assigned" hidden />
            </td>
            <td><input type="submit" class="btn btn-success" value="Accept Request" /></td>
        </tr>
        </form>
    }
</table>