@model ZeroHunger.Models.Restaurant

@{
    ViewBag.Title = "AddRestaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddRestaurant</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
